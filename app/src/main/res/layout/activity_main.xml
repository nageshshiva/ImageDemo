<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cbt.imagedemo.MainActivity">

   <ImageView
    android:id="@+id/downloadimage1"
    android:src="@mipmap/ic_launcher"
    android:layout_width="150dp"
    android:layout_height="200dp"
       android:layout_marginRight="8dp"
       android:layout_marginLeft="10dp"
    />
   <ImageView
       android:id="@+id/downloadimage2"
       android:src="@mipmap/ic_launcher"
       android:layout_width="150dp"
       android:layout_height="200dp"
       android:layout_toRightOf="@id/downloadimage1"
       android:layout_marginLeft="50dp"
       android:layout_marginRight="8dp"
       />
   <ImageView
       android:id="@+id/downloadimage3"
       android:src="@mipmap/ic_launcher"
       android:layout_width="150dp"
       android:layout_height="200dp"
       android:layout_below="@id/downloadimage1"
       android:layout_marginRight="8dp"
       android:layout_marginLeft="10dp"
       />
   <ImageView
       android:id="@+id/downloadimage4"
       android:src="@mipmap/ic_launcher"
       android:layout_width="150dp"
       android:layout_height="200dp"
       android:layout_toRightOf="@id/downloadimage3"
       android:layout_below="@id/downloadimage2"
       android:layout_marginLeft="50dp"
       android:layout_marginRight="8dp"
       />
</RelativeLayout>
